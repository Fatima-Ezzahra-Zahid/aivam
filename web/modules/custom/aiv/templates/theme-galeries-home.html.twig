<div class="card-salons card-slider">
    <div class="small-width d-block">
        <div class="">
            <h2 class="title-bold">{{ data.item.title.value }}</h2>
            <p>{{ data.item.body.summary|raw }}</p>
            <a href="{{ path('entity.node.canonical', { 'node' : data.item.nid.value }) }}"
               class="dark-btn">{{ data.settings.title_view_all }}</a>{#TODO : for translate params#}
        </div>
        <div class="text-right mt-4">
          <select class="items">
            {% for id, galerie in data.data %}
              <option value="{{ id }}">{{ galerie.title }}</option>
            {% endfor %}
          </select>
        </div>
    </div>
    <div class="row" id="slider-salon">
        {% for galerie in data.item.field_galerie.value %}
            {% set paragraph = paragraphLoad(galerie.target_id) %}
            {% if paragraph.field_booleen.value %}
                <div>
                    <figure class="item-salon"><img
                                src="{{ (paragraph.field_image_s.entity.fileuri is not empty) ? file_url(paragraph.field_image_s.entity.fileuri) : '' }}"
                                alt="{{ paragraph.field_image_s.alt }}"
                                title="{{ paragraph.field_image_s.title }}"></figure>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
