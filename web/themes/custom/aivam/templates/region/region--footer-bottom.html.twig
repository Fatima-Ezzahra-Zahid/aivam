{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div {{ attributes }} class="bottom-footer">
    <div class="footer-width">
      <p>{{ "Copyright "~ 'now'|date('Y')~". All Rights Reserved."|t }} </p>{#TODO#}
      <div class="social-footer d-none">
        {{ content }}
        <ul class="d-inline-block">
          <li><a href="{{ theme_get_setting('url_facebook') }}" target="_blank"><img
                src="/{{ base_path ~ active_theme_path() }}/assets/images/icon-face.png"></a></li>
          <li><a href="{{ theme_get_setting('url_twitter') }}" target="_blank"><img
                src="/{{ base_path ~ active_theme_path() }}/assets/images/icon-twit.png"></a></li>
          <li><a href="{{ theme_get_setting('url_linkedin') }}" target="_blank"><img
                src="/{{ base_path ~ active_theme_path() }}/assets/images/icon-linkden.png"></a>
          </li>{#TODO#}
        </ul>
      </div>
    </div>
  </div>
{% endif %}
